@model IEnumerable<Candidate>

@if(Model.Count() > 0)
{
    <h6 class="display-6">Applications(@Model.Count())</h6>
    
    <table class="table table-hover table-striped">

        <thead>
            <tr>
                <th>Email</th>
                <th>FullName</th>
                <th>ApplyedAt</th>
                <th>Course</th>
            </tr>
        </thead>

        <tbody>

            @foreach(Candidate candidate in Model)
            {
                <tr>
                    <td>@candidate.Email</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.ApplyedAt</td>
                    <td>@candidate.SelectedCourse</td>
                </tr>
            }

        </tbody>

    </table>
}
else
{
    <div class="alert alert-info">
        There is no application. Please <a asp-controller="Course" asp-action="Apply">click</a> here to apply.
    </div>
}